/**
 * Server Animation Composable
 * ç®¡ç†ä¼ºæœå™¨çˆ†ç‚¸å‹•ç•«çš„æ»¾å‹•è§¸ç™¼æ•ˆæœ
 */

import { ref, onMounted, onUnmounted } from 'vue'
import type { gsapType, ScrollTriggerType } from '#app'

export const useServerAnimation = () => {
  const { $gsap, $ScrollTrigger } = useNuxtApp() as {
    $gsap: { gsap: gsapType }
    $ScrollTrigger: { ScrollTrigger: ScrollTriggerType }
  }

  const { gsap } = $gsap
  const { ScrollTrigger } = $ScrollTrigger

  const timeline = ref<gsapType.Timeline>()
  const isAnimating = ref(false)

  /**
   * åˆå§‹åŒ–æ»¾å‹•å‹•ç•«æ™‚é–“è»¸
   * @param callbacks - å‹•ç•«å›èª¿å‡½æ•¸
   */
  const initAnimationTimeline = (callbacks: {
    onFadeIn?: (progress: number) => void
    onCaseOpen?: (progress: number) => void
    onExplode?: (progress: number) => void
    onReassemble?: (progress: number) => void
  }) => {
    // å‰µå»ºä¸»æ™‚é–“è»¸ï¼Œç¶å®šåˆ°æ•´å€‹é é¢æ»¾å‹•
    timeline.value = gsap.timeline({
      scrollTrigger: {
        trigger: 'body',
        start: 'top top',
        end: 'bottom bottom',
        scrub: 1, // å¹³æ»‘å‹•ç•«
        pin: false, // ä¸å›ºå®šå…ƒç´ 
      },
    })

    // éšæ®µ 1: æ·¡å…¥æ•ˆæœ (0-20%)
    timeline.value.to(
      {},
      {
        duration: 20,
        onUpdate: function () {
          const progress = this.progress()
          callbacks.onFadeIn?.(progress)
        },
      }
    )

    // éšæ®µ 2: æ©Ÿæ«ƒæ‰“é–‹ (20-50%)
    timeline.value.to(
      {},
      {
        duration: 30,
        onUpdate: function () {
          const progress = this.progress()
          callbacks.onCaseOpen?.(progress)
        },
      }
    )

    // éšæ®µ 3: çµ„ä»¶çˆ†ç‚¸ (50-80%)
    timeline.value.to(
      {},
      {
        duration: 30,
        onUpdate: function () {
          const progress = this.progress()
          callbacks.onExplode?.(progress)
        },
      }
    )

    // éšæ®µ 4: é‡æ–°çµ„è£æˆ–éæ¸¡ (80-100%)
    timeline.value.to(
      {},
      {
        duration: 20,
        onUpdate: function () {
          const progress = this.progress()
          callbacks.onReassemble?.(progress)
        },
      }
    )
  }

  /**
   * å‰µå»ºæ–‡å­—ç–ŠåŠ å±¤å‹•ç•«
   * @param elements - è¦å‹•ç•«åŒ–çš„å…ƒç´ é¸æ“‡å™¨
   */
  const animateTextOverlays = (elements: string[]) => {
    elements.forEach((selector, index) => {
      gsap.fromTo(
        selector,
        {
          opacity: 0,
          y: 50,
        },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          scrollTrigger: {
            trigger: selector,
            start: 'top 80%',
            end: 'top 50%',
            scrub: 1,
          },
          delay: index * 0.2,
        }
      )
    })
  }

  /**
   * ç‚ºå…ƒç´ æ·»åŠ è¦–å·®æ•ˆæœ
   * @param selector - å…ƒç´ é¸æ“‡å™¨
   * @param speed - è¦–å·®é€Ÿåº¦ (0-1)
   */
  const addParallaxEffect = (selector: string, speed: number = 0.5) => {
    gsap.to(selector, {
      yPercent: -50 * speed,
      ease: 'none',
      scrollTrigger: {
        trigger: selector,
        start: 'top bottom',
        end: 'bottom top',
        scrub: true,
      },
    })
  }

  /**
   * æ¸…ç†å‹•ç•«è³‡æº
   */
  const cleanup = () => {
    if (timeline.value) {
      timeline.value.kill()
    }
    ScrollTrigger.getAll().forEach((trigger: ScrollTriggerType) => {
      trigger.kill()
    })
  }

  onMounted(() => {
    isAnimating.value = true
  })

  onUnmounted(() => {
    cleanup()
  })

  return {
    timeline,
    isAnimating,
    initAnimationTimeline,
    animateTextOverlays,
    addParallaxEffect,
    cleanup,
  }
}
</file>

